<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.queenabergen.loft9">

    <application
        android:allowBackup="true"
        android:icon="@drawable/loft9banner"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/SplashTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Homepage" />
        <activity
            android:name=".NaviPage"
            android:label="@string/title_activity_navi_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Gallery" />
        <activity android:name=".EventPage" />
        <activity android:name=".DeveloperPage"></activity>
    </application>

</manifest>